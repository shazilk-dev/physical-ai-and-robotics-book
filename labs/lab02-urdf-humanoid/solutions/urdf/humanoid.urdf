<?xml version="1.0"?>
<!--
Lab 2 Solution: Simplified Humanoid URDF
Physical AI & Humanoid Robotics Textbook

Complete 7-DOF upper body humanoid robot:
- 1 Torso (base)
- 1 Head (1 DOF neck)
- 2 Arms (3 DOF each: shoulder pitch, shoulder roll, elbow)

Total: 6 links + 2 virtual links, 7 active joints
-->

<robot name="simple_humanoid">

  <!-- ============================================================ -->
  <!-- TORSO (BASE LINK)                                            -->
  <!-- ============================================================ -->

  <link name="torso">
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.4"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.8 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.4"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <!-- Inertia tensor for box: I = (1/12) * m * (h² + d²) -->
      <inertia ixx="0.05" ixy="0.0" ixz="0.0"
               iyy="0.06" iyz="0.0"
               izz="0.03"/>
    </inertial>
  </link>


  <!-- ============================================================ -->
  <!-- HEAD                                                         -->
  <!-- ============================================================ -->

  <link name="head">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.075"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.075"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Inertia tensor for sphere: I = (2/5) * m * r² -->
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001"/>
    </inertial>
  </link>

  <!-- Neck joint: Yaw rotation (±90°) -->
  <joint name="neck" type="revolute">
    <parent link="torso"/>
    <child link="head"/>
    <origin xyz="0 0 0.45" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="2.0"/>
  </joint>


  <!-- ============================================================ -->
  <!-- LEFT ARM                                                     -->
  <!-- ============================================================ -->

  <!-- Virtual link for 2-DOF shoulder -->
  <link name="left_shoulder_virtual_link"/>

  <!-- Shoulder pitch joint (forward/backward swing) -->
  <joint name="left_shoulder_pitch" type="revolute">
    <parent link="torso"/>
    <child link="left_shoulder_virtual_link"/>
    <origin xyz="0 0.15 0.35" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.785" upper="3.14" effort="20.0" velocity="2.0"/>
  </joint>

  <!-- Left upper arm -->
  <link name="left_upper_arm">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <!-- Inertia for cylinder about center -->
      <inertia ixx="0.005" ixy="0.0" ixz="0.0"
               iyy="0.005" iyz="0.0"
               izz="0.0005"/>
    </inertial>
  </link>

  <!-- Shoulder roll joint (outward swing) -->
  <joint name="left_shoulder_roll" type="revolute">
    <parent link="left_shoulder_virtual_link"/>
    <child link="left_upper_arm"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.57" effort="20.0" velocity="2.0"/>
  </joint>

  <!-- Left forearm -->
  <link name="left_forearm">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.25"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.25"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
               iyy="0.004" iyz="0.0"
               izz="0.0004"/>
    </inertial>
  </link>

  <!-- Left elbow joint -->
  <joint name="left_elbow" type="revolute">
    <parent link="left_upper_arm"/>
    <child link="left_forearm"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="2.356" effort="15.0" velocity="2.0"/>
  </joint>


  <!-- ============================================================ -->
  <!-- RIGHT ARM (mirror of left)                                  -->
  <!-- ============================================================ -->

  <!-- Virtual link for 2-DOF shoulder -->
  <link name="right_shoulder_virtual_link"/>

  <!-- Shoulder pitch joint -->
  <joint name="right_shoulder_pitch" type="revolute">
    <parent link="torso"/>
    <child link="right_shoulder_virtual_link"/>
    <origin xyz="0 -0.15 0.35" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.785" upper="3.14" effort="20.0" velocity="2.0"/>
  </joint>

  <!-- Right upper arm -->
  <link name="right_upper_arm">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.25"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0"
               iyy="0.005" iyz="0.0"
               izz="0.0005"/>
    </inertial>
  </link>

  <!-- Shoulder roll joint (note: negative limits for right side) -->
  <joint name="right_shoulder_roll" type="revolute">
    <parent link="right_shoulder_virtual_link"/>
    <child link="right_upper_arm"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="0" effort="20.0" velocity="2.0"/>
  </joint>

  <!-- Right forearm -->
  <link name="right_forearm">
    <visual>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.25"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.25"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 -0.125" rpy="0 0 0"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
               iyy="0.004" iyz="0.0"
               izz="0.0004"/>
    </inertial>
  </link>

  <!-- Right elbow joint -->
  <joint name="right_elbow" type="revolute">
    <parent link="right_upper_arm"/>
    <child link="right_forearm"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="2.356" effort="15.0" velocity="2.0"/>
  </joint>

</robot>
