# Application
APP_NAME=Physical AI RAG API
DEBUG=true

# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Qdrant Cloud
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=physical_ai_textbook

# LLM Provider Configuration
# Choose provider: openai, gemini, or qwen
LLM_PROVIDER=openai

# OpenAI (Default - $2-3/month for 1000 queries)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Google Gemini (FREE - 60 req/min, 1,500 req/day)
# Get key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key

# Qwen/Alibaba Cloud (Paid/Free tiers available)
# Get key from: https://dashscope.console.aliyun.com/
QWEN_API_KEY=your-qwen-api-key

# JWT Auth
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://shazilk-dev.github.io
